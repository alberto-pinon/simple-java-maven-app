pipeline {
    agent any
    tools { 
        maven 'Maven3' 
        jdk 'jdk8' 
    }
    stages {

        stage('build') {
            steps {
                echo 'Building the application...'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('test') {
            steps {
                echo 'Testing the application...'
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('deliver') {
            steps {
                echo 'Deliver the application...'
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
